{
  "root": true,
  "extends": "@nwoltman/eslint-config",
  "rules": {
    "id-blacklist": 0,
    "max-len": [2, {
      "code": 120,
      "ignoreUrls": true,
      "ignoreRegExpLiterals": true
    }]
  },
  "overrides": [
    {
      "files": ["tasks/**"],
      "rules": {
        "no-sync": 0
      }
    }
  ]
}
